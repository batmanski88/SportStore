@model SportStore.Api.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Index";
}

<section class="container">
    <div class="row">
        <div class="categories">
            <ul>
                @foreach(var item in Model.Categories)
                {
                    <li>
                        <a href="@Url.Action("List", "Store", new { currentCategory = item.Name})">
                            <img class="icon" src="~/Content/Icons/@item.IconFileName" />
                            <br />
                            @item.Name
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</section>
<section class="container">
    <div class="row">
    @foreach(var item in Model.Products)
        {
            <div class="product col-md-4">
                <div class="img">
                    <img src="~/Content/Products/@item.FileName" />
                </div>
                <p>
                    @item.Name
                    <br />
                    @item.Price zł
                    <br />
                    <a href="@Url.Action("AddToCart", "Cart", new { ProductId = item.ProductId})">Dodaj do koszyka<span></span></a>
                </p>
            </div>
        }
    </div>
</section>
