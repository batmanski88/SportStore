@model SportStore.Api.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<section class="container">
    <h2>Zarejestruj się</h2>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <hr />
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-md-6" })
                @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control col-md-6" })
                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control col-md-6" })
                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ShippingDetail, new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.RadioButtonFor(m => m.ShippingDetail, new { @class = "form-control col-md-6"})
                @Html.ValidationMessageFor(m => m.ShippingDetail, null, new { @class = "text-danger" })
            </div>
        </div>
        <div id="shipping-details" hidden="hidden">
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control col-md-6" })
                    @Html.ValidationMessageFor(m => m.FirstName, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control col-md-6" })
                    @Html.ValidationMessageFor(m => m.LastName, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Address, new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control col-md-6" })
                    @Html.ValidationMessageFor(m => m.Address, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.City, new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.City, new { @class = "form-control col-md-6" })
                    @Html.ValidationMessageFor(m => m.City, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Code, new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control col-md-6" })
                    @Html.ValidationMessageFor(m => m.Code, null, new { @class = "text-danger" })
                </div>
            </div>
            
        </div>
        <div class="form-group col-md-2">
            <button type="submit" class="btn btn-primary" style="float: right">Zaloguj</button>
        </div>
    }
</section>

@section Scripts
    {
    <script>
        $(document).ready(function () {
            var radiobutton = $('#ShippingDetail').prop('checked', false);
            var shippingDetails = $('#shipping-details');

            radiobutton.on('click', function () {
                var checked = $(this).prop('checked', true);

                if (checked)
                {
                    shippingDetails.show('slow');
                }
                else
                {
                    shippingDetails.hide('slow');
                }
            });
            
        });
    </script>      
    }